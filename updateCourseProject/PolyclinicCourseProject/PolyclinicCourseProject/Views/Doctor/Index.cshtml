@model IEnumerable<PolyclinicCourseProject.doctor>

@{
    ViewBag.Title = "Index";
}

<h2>All doctors</h2>

<p>
    @Html.ActionLink("Register doctor", "Register", "Account")
</p>
<table class="table">
    <tr>
        <th>
            ID doctor
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronymic)
        </th>
        <th>
            Date of birth
        </th>
        <th>
            Phone number
        </th>
        <th>
            ID specialty
        </th>
