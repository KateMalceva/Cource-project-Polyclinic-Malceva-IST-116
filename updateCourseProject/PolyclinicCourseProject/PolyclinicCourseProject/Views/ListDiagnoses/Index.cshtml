@model IEnumerable<PolyclinicCourseProject.list_of_diagnoses>

@{
    ViewBag.Title = "Index";
}

<h2>Diagnoses</h2>

@if (User.IsInRole("Admin"))
{<p>
        @Html.ActionLink("Create new diagnose", "Create")
    </p>
}
<table class="table">
    <tr>
        @if (User.IsInRole("Admin"))
        {
            <th>
                ID diagnose
            </th>
        }
        <th>
            Diagnose name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.List_diagnoses_id)
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.Diagnose_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit |", "Edit", new { id = item.List_diagnoses_id })
                }

                @Html.ActionLink(" Details", "Details", new { id = item.List_diagnoses_id })

            </td>
        </tr>
    }

</table>
